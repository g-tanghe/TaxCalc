<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.tanghe.garben.taxcalc.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText"
                android:textSize="32dp"
                android:textAlignment="center"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:textColorHint="#78909C"
                android:layout_gravity="center"
                android:hint="Type amount here"
                android:textColor="#000000"
                android:minHeight="50dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:digits="2"
                        android:layout_weight="20"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:longClickable="false"
                        android:text="Incl. 6 %"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:digits="2"
                        android:layout_weight="10"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:digits="2"
                        android:layout_weight="10"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="Incl. 21 %"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:contextClickable="false"
                        android:digits="2"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:digits="2"
                        android:layout_weight="10"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="Excl. 6 %"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:digits="2"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:digits="2"
                        android:layout_weight="10"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="Excl. 21 %"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:digits="2"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></RelativeLayout>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="320dp"
                android:layout_height="50dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:elevation="2dp">
            </com.google.android.gms.ads.AdView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:textSize="32dp"
                    android:textColor="#F44336"
                    android:textColorHint="#78909C"
                    android:textAlignment="center"
                    android:hint="Type taxrate here"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:minHeight="50dp"
                    android:editable="false" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_weight="10"
                        android:textSize="16dp"
                        android:textColor="#F44336"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_weight="5"
                        android:textSize="20dp"
                        android:textColor="#F44336"
                        android:textAlignment="center"
                        android:layout_marginRight="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_weight="10"
                        android:textSize="16dp"
                        android:textColor="#F44336"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_weight="5"
                        android:textSize="20dp"
                        android:textColor="#F44336"
                        android:textAlignment="center"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></RelativeLayout>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="320dp"
                android:layout_height="50dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner2"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:elevation="2dp">
            </com.google.android.gms.ads.AdView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
